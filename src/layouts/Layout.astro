---
import '@fontsource/poppins';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <div class="container flex min-h-[60px] items-center justify-between">
        <h1 class="text-2xl font-semibold uppercase text-gray-900">David Inga</h1>
        <nav>
          <ul class="flex space-x-8 text-sm font-medium uppercase text-gray-900">
            <li>
              <a href="/">Home</a>
            </li>
            <li>
              <a href="/blog">About me</a>
            </li>
            <li>
              <a href="/blog">My work</a>
            </li>
            <li>
              <a href="/blog">Contact</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <slot />
  </body>
</html>
<style is:global>
  @layer base {
    html {
      @apply bg-white font-body text-gray-600 antialiased;
    }
  }
  @layer components {
    .container {
      @apply mx-auto px-4;
    }
  }
</style>
